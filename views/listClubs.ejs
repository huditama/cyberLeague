<% include ./partials/headerAdmin %>
<section>
    <h1>Club Data</h1>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Club Name</th>
                    <th>Address</th>
                    <th>Register to a Competition</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                <tr>
                    <% listClubs.map(x => { %>
                    <td><%= x.id%></td>
                    <td><%= x.club_name%></td>
                    <td><%= x.address%></td>
                    <td><a href="/playersAdmin/registerCompetition/<%= x.id %>/">Find Competition!</a></td>
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>
    <h2><a href="/playersAdmin/addClub">Make Your Own Club!</a></h2>
</section>


