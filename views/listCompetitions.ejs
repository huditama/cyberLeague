<% include ./partials/headerAdmin %>
<section>
    <h1>Competition Data</h1>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Competition Name</th>
                    <th>Schedule</th>
                    <th>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                <tr>
                    <% listCompetitions.map(x => { %>
                    <td><%= x.id%></td>
                    <td><%= x.competition_name%></td>
                    <td><%= x.schedule%></td>
                    <td>
                        <a href="/playersAdmin/competitors/<%= x.id %>">Teams</a>
                    </td>
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>
    <h2><a href="/playersAdmin/addCompetition">Add A Competition!</a></h2>
</section>


