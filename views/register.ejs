<% include ./partials/header %>
<form class="login" method="POST">
  <h1 class="login-title">Register </h1>
  <input type="text" class="login-input" placeholder="First name" name="first_name" minlength="3" autofocus required>
  <input type="text" class="login-input" placeholder="Last name" name="last_name" required>
  Gender:<br />
  <select name="gender">
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select><br /><br />
  <!-- <input type="text" class="login-input" placeholder="Gender" name="gender" autofocus required> -->

  <input type="email" class="login-input" placeholder="Email Adress" name="email" autofocus required>
  <input type="password" class="login-input" placeholder="Password" name="password" autofocus required>
  Role:<br />
  <select name="role">
    <option value="Athlete">Athlete</option>
    <option value="Admin">Admin</option>
    <option value="Promotor">Promotor</option>
  </select><br /><br />
  <!-- <input type="text" class="login-input" placeholder="Position" name="role" autofocus required> -->
  <input type="submit" value="Lets Go" class="login-button">
</form>